# Copy to backend/.env and adjust values as needed
MONGODB_URI=mongodb://localhost:27017
MONGO_DB=nirogya_db

# JWT configuration used by backend/auth/utils.py
JWT_SECRET=change-me-to-a-long-secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# Background poll interval in seconds
POLL_INTERVAL_SECONDS=5

# Email Service (Resend) - Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
